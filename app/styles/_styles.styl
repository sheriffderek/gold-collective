
// $components
figure, .image-w
	responsive-image-wrapper()

svg
	fill: currentColor

.container
	display: flex
	justify-content: center
	> .inner-w
		padding: $pad
		width: 100%
		max-width: 1000px
		@media $break-point-1
			padding: $pad $pad*2

body
	standard-type()

// $styles
body > .ember-view // master wrapper by default
	// border: 3px solid blue
	display: flex
	flex-direction: column
	min-height: 100vh

.site-header
	display: none

.application-outlet
	display: flex
	flex-direction: column
	justify-content: flex-start
	flex-grow: 1

.page-content
	// border: 2px solid green
	.inner-w
		// border: 5px solid orange

.cta
	margin-top: $pad*6
	.action-list
		display: flex
	.action
		display: block
		&:not(:last-of-type)
			margin-right: $pad
		a //
			display: block

.social-list
	display: flex
	li //
		&:not(:first-of-type)
			margin-left: $pad
		a //
			display: block
			padding: $pad
			background: $color

.wp-content
	// border: 1px solid red
	padding-top: $pad*4
	p, h2
		max-width: 800px
	h1
		big-type()
		margin-bottom: $pad*4
	h2
		strong-voice()
	p
		margin-top: $pad*2
	p + h2
		margin-top: $pad*4
	h2 + h2
		margin-top: $pad*2
	figure
		margin: $pad*2 0
	.gallery
		// border: 1px solid red
		display: flex
		flex-direction: row
		justify-content: space-between
		.gallery-item
			// border: 1px solid blue
			width: 32.5%
			padding: $pad*2 0
		.gallery-icon
			responsive-image-wrapper()

body.landing
	//
	.application-outlet
		justify-content: center
		align-items: center
	.site-header
		display: none
	.image-slider
		position: fixed
		top: 0
		right: 0
		bottom: 0
		left: 0
		width: 100%
		height: 100%
		z-index: 0
		.image
			height: 100%
			background-size: cover
			background-position: center center
	.portal
		position: relative
		display: block
		width: 80vw
		z-index: 5
		color: white
		// g
		// 	&:hover
		// 		color: black
		svg
			filter: drop-shadow( 1px 1px 0 rgba(0,0,0,.1) )
			transition: 1s // $todo nope
		&:hover
			// filter: drop-shadow( 3px 3px 0 rgba(0,0,0,.2) )

	.legal
		display: none

body.about
	//
	.photo-list
		display: flex
		flex-direction: row
	.gallery
		display: none
		@media $break-point-2
			display: flex
	.image-w
		display: block
		@media $break-point-2
			display: none
	h2
		@media $break-point-2
			&:nth-of-type(3)
				margin-top: $pad*2

body.faqs
	.wp-content
		p
			margin-top: $pad*3

body.investment
	//

body.reviews
	.reviews
		margin-top: $pad*8
		h1
			big-type()
	.social
		margin: $pad*1 0
		h2
			margin-bottom: $pad
		@media $break-point-1
			margin: $pad*2 0
	.gallery
		.gallery-item
			flex-basis: 100%
			max-width: 800px
			&:nth-of-type(1), &:nth-of-type(3)
				display: none
			@media $break-point-1
				flex-basis: 32%
				&:nth-of-type(1), &:nth-of-type(3)
					display: block
	.pillows
		margin-top: $pad*3
		@media $break-point-1
			display: none
	.reviews
		margin-top: $pad*3
	.review-list
		// border: 3px solid blue
		margin-top: $pad*3
		// display: flex
		// flex-direction: row
		// align-items: center
		.review
			// border: 3px solid orange
			&:not(:first-of-type)
				// margin-top: $pad*6
		.quote
			// text-align: left
			// border: 1px solid red
			max-width: 760px
			margin: 0
		.source
			// text-align: leftp
			// border: 2px solid blue
			opacity: .5
			margin-top: $pad*2
			&:before
				// content: '~ '
				opacity: .3

body.contact
	//
	.contact-list
		// border: 1px solid red
		margin: $pad*2 0
		.contact
			margin-bottom: $pad
		.title
			black-label()
		.content
			whisper-voice()
			@media $break-point-1
				standard-type()
	figure
		max-width: 540px
	.social
		margin: $pad*4 0
		@media $break-point-1
			margin: $pad*6 0
		h2
			margin-bottom: $pad*2
	.reviews
		h1
			big-type()
			margin-bottom: $pad*3
	.form
		max-width: 800px
		h2
			strong-voice()
			margin: $pad*5 0 $pad
		iframe
			margin-left: -5px

body.inspiration
	//

footer.legal
	whisper-voice()
	padding-top: $pad*4
	.inner-w
		display: flex
		flex-direction: column
		@media $break-point-1
			flex-direction: row
	.copy
		// border: 1px solid red
	.menu
		// border: 1px solid blue
		display: flex
		flex-direction: row
		// margin-left: $pad*4
		// display: none
		@media $break-point-1
			display: flex
			margin-left: $pad*4
		li
			margin-right: $pad*2
		a
			color: $gray-light
			&:hover
				color: $color

.quote
	p
		&:before, &:after
			display: inline
			// font-size: 30px

			color: $gray-light
			// position: absolute
		&:before
			content: '“'

			// top: 0
			// left: 0
		&:after
			content: '”'
