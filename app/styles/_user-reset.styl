html
	box-sizing: border-box

*, *:before, *:after
	box-sizing: inherit

// remove default margin // this shoul be already done in meyer-reset $check
body //
	margin 0

// links reset to inherit styles by default
a //
	text-decoration: none
	color: inherit
	cursor: pointer // just in case

// cursor reset / stops blinking issues
html,
body
	cursor: default
input[type="text"], textarea, code
	cursor: text
a,
label,
button,
input[type="radio"],
input[type="submit"],
input[type="checkbox"]
	cursor pointer
button[disabled],
input[disabled]
	cursor: default

// resolves an IE 9 SVG bug // $todo - do we need this anymore?
svg:not(:root)
	overflow: hidden

// remove iOS tap highlight
*
	-webkit-tap-highlight-color: rgba(0,0,0,0)
	-webkit-tap-highlight-color: transparent

//
selectable($type)
	-webkit-user-select: $type
	-khtml-user-select: $type
	-moz-user-select: -moz- + ($type)
	-o-user-select: $type
	user-select: $type

*:not(input) //
	selectable(none)

h1, h2, h3, h4, h5, h6, li, p, strong, em
	selectable(text)

// text selection reset
* //
	&::-moz-selection,
	&::selection
		background: rgba(255,255,255,0) // nessesary ? $check
		background: transparent

selection-color($selection-color)
	&::-moz-selection
		color: $selection-color
	&::selection
		color: $selection-color
	selection-color: $selection-color

